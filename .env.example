# Database
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Payload CMS
PAYLOAD_SECRET=your-payload-secret-here

# Sync security (used by /api/sync-jobs endpoint)
SYNC_SECRET=your-sync-secret-here
# Same value as SYNC_SECRET; exposed to browser for MVP admin sync button (replace with server action in production)
NEXT_PUBLIC_SYNC_SECRET=

# Supabase
SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Storage (Supabase Storage – S3-compatible)
STORAGE_ENDPOINT=https://[project-ref].supabase.co/storage/v1/s3
STORAGE_BUCKET=media
STORAGE_ACCESS_KEY_ID=
STORAGE_SECRET_ACCESS_KEY=
STORAGE_REGION=auto

# Analytics (optional – Plausible)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=findjobabroad.com

# Site URL (for sitemap, robots, canonical URLs, JSON-LD)
NEXT_PUBLIC_BASE_URL=https://findjobabroad.com
